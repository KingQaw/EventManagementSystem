@model EventManagementSystem.Models.Event

@{
    ViewData["Title"] = "已报名";
}

<h1>您已经报名过此活动</h1>

<div class="alert alert-info">
    <h4>活动: @Model.Title</h4>
    <p>开始时间: @Model.StartTime</p>
    <p>地点: @Model.Location</p>
</div>

<div>
    <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">查看活动详情</a>
    <a asp-controller="Events" asp-action="Index" class="btn btn-secondary">浏览更多活动</a>
</div>